datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id Int @id @default(autoincrement())

  email    String @unique
  name     String
  role     String
  password String
  restaurants Restaurant[]

  @@map("users")
}

model Restaurant {
  id Int @id @default(autoincrement())

  name         String
  description  String
  address      String
  reservations Int
  UserId       Int
  manager      User   @relation(fields: [UserId], references: [id])

  @@map("restaurants")
}
